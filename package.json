{
	"name"				: "{{tag}}",
	"version"			: "{{version}}",
	"description"		: "{{desc}}",
	"keywords"			: "{{kw}}",
	"license"			: "MIT",
	"homepage"			: "https://github.com/{{org}}/{{repo}}#readme",
	"bugs"				: { "url": "https://github.com/{{org}}/{{repo}}/issues" },

	"author"			: {
		"name"			: "{{author}}",
		"email"			: "{{author_email}}",
		"url"			: "https://github.com/{{author_id}}"
	},

	"repository"		: {
		"type"			: "git",
		"url"			: "git+https://github.com/{{org}}/{{repo}}.git"
	},

	"type"				: "module",
	"main"				: "./dist/main.js",
	"types"				: "./dist/main.d.ts",
	"files"				: ["dist"],
	"exports"			: {
		".": {
			"types"		: "./dist/main.d.ts",
			"import"	: "./dist/main.js",
			"require"	: "./dist/main.js"
		}
	},

	"scripts"			: {
		"build"			: "tsup",
		"start"			: "tsup && node dist/main.js",
		"test"			: "{{pm}} test"
	},

	"engines"			: { "bun": ">=1.3.3" },

	"peerDependencies"	: { "bun": ">=1.3.3" },
	"devDependencies"	: {
		"@eslint/js"					: "^9.34.0",
		"@stylistic/eslint-plugin"		: "^5.3.1",
		"@types/bun"					: "^1.1.13",
		"@types/node"					: "^20.12.7",
		"bun-plugin-dts"				: "^0.3.0",
		"bun-types"						: "^1.1.38",
		"ts-node"						: "^10.9.2",
		"tsup"							: "^8.5.1",
		"typescript"					: "^5.4.5",
		"typescript-eslint"				: "^8.42.0"
	},
	"dependencies"	: {
	}
}